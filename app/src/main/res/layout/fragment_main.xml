<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Card"
        android:id="@+id/generateButton"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/resetButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="45dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:gravity="center"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/generateButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="First Card"
            android:id="@+id/input1"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="70dp"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Second Card"
            android:id="@+id/input2"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="70dp"/>

        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last Card"
            android:id="@+id/input3"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Turn"
        android:id="@+id/buttonEndTurn"
        android:enabled="false"
        android:layout_alignTop="@+id/generateButton"
        android:layout_toEndOf="@+id/resetButton" />

</RelativeLayout>
